<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_compose_music"
    tools:context="com.example.sunny.practice.ComposeMusic">

    <Spinner
        android:id="@+id/timesignature"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/signature_arrays"
        android:background="@drawable/rounded_corner"
        android:layout_margin="5dp"
        android:padding="5dp"
        />
    <Spinner
        android:id="@+id/scales"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:entries="@array/scales_arrays"
        android:background="@drawable/rounded_corner"
        android:layout_margin="5dp"
        android:padding="5dp"/>
    <Spinner
        android:id="@+id/chords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:entries="@array/chords_arrays"
        android:background="@drawable/rounded_corner"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/music"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" F Em7 A7 Dm  Dm/C "
        android:background="@drawable/rounded_corner"
        android:layout_margin="5dp"
        android:padding="5dp"/>
    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <Spinner
        android:id="@+id/genre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/genre_arrays"
        android:background="@drawable/rounded_corner"
        android:layout_margin="5dp"
        android:padding="5dp"
        />

    <Button
        android:id="@+id/suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestion"
        android:layout_margin="5dp"
        android:padding="5dp"/>

</LinearLayout>
